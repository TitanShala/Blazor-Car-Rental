@page "/Contact"
@using Blazor_Car_Rental.Data.Models
@using Blazor_Car_Rental.Data.Services
@inject MessageService MessageServices
@inject NavigationManager nav;
<h3>Contact</h3>

<form>
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input form="Name" class="form-control" @bind="newMessage.Name" />
            </div>
            <div class="form-group">
                <label for="Email" class="control-label">Email</label>
                <input form="Email" class="form-control" @bind="newMessage.Email" />
            </div>
            <div class="form-group">
                <label for="Subject" class="control-label">Subject</label>
                <input form="Subject" class="form-control" @bind="newMessage.Subject" />
            </div>
            <div class="form-group">
                <label for="Text" class="control-label">Text</label>
                <input form="Text" class="form-control" @bind="newMessage.Text" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <input type="button" class="btn btn-primary" @onclick="@CreateNewMessage" value="Save" />
            </div>
        </div>
    </div>
</form>

@code {
    Message newMessage = new Message();

    public void CreateNewMessage()
    {
        MessageServices.AddMessage(newMessage);
        nav.NavigateTo("/");

    }
}
